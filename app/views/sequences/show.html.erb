<div class="container-fluid">
	<div class="col-xs-8">
		<center>
			<h1><%= @sequence.title %></h1>
			<label id="position">1</label>
			<label>/</label>
			<label id="positions">1</label>

			<table class="table-bordered">
				<tbody>
					<% floors.times do |i| %>
					<tr>	
						<% per_floor.times do |j| %>
						<td class="hostel-win" 
						id="<%= get_index i, j %>" 
						style="width:50px;height:50px;">
						</td>
						<% end %>
					</tr>
					<% end %>
				</tbody>
			</table>

			<br/>
			<div class="btn-group" role="group">
				<button type="button" class="btn btn-success" id="play">
					PLAY
				</button>
				<button type="button" class="btn btn-danger" id="reset">
					RESET
				</button>
			</div>

			<div id="dataField" hidden>
				<%= @sequence.data %>
			</div>
		</center>
	</div>

	<div class="col-xs-4">
		<div class="description">
			<strong>Description:</strong>
			<%= @sequence.description %>
		</div>
			<div class="container-fluid">
				<div class="row">
					<% if can_modify? %>
					<div class="col-md-2"><%= button_to 'Edit', edit_sequence_path(@sequence), class: "btn btn-primary", method: :get %></div>
					<div class="col-md-2"><%= button_to 'Delete', @sequence, method: :delete,  class: "btn btn-danger", data: { confirm: 'Are you sure?'} %></div>
					<% elsif user_signed_in? %>
					<div class="col-md-4" id="raty" data-score="<%= @rating %>"></div>
					<% end %>
					<div class="col-md-2 fb-share-button" 
						data-href="https://developers.facebook.com/docs/plugins/" 
						data-layout="button">
					</div>
				</div>
			</div>
	</div>
</div>
